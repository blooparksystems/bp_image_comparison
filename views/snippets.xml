<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<!-- css and scripts for the tap navigaton bar -->
		<template id="assets_frontend" inherit_id="website.assets_frontend" name="Image Comparison Assets">
			<xpath expr="." position="inside">
				<link rel="stylesheet" href="/bp_image_comparison_slider/static/src/css/main.css" type="text/css" media="screen" />
				<script src="/bp_image_comparison_slider/static/src/js/main.js" type="text/javascript"></script>
				<script src="/bp_image_comparison_slider/static/src/js/jquery.event.move.js" type="text/javascript"></script>
				<script src="/bp_image_comparison_slider/static/src/js/jquery.twentytwenty.js" type="text/javascript"></script>
			</xpath>
		</template>

		<template id="image_comparison_snippet" inherit_id="website.snippets" name="Clean Theme snippets">
			<xpath expr="//div[@id='snippet_structure']" position="inside">
				<div>
					<div class="oe_snippet_thumbnail">
						<img class="oe_snippet_thumbnail_img" src="/bp_8_0_image_comparison_slider/static/src/img/menu_snippet.jpg" />
						<span class="oe_snippet_thumbnail_title">Image Comparisson</span>
					</div>
					
					<section class="oe_snippet_body mb32">
						<div class="container mt32">
							<div class="container1">
								 <!-- The before image is first -->
								 <img src="/bp_image_comparison_slider/static/src/img/photo_before.jpg" class="img img-responsive" width="100%"/>
								 <!-- The after image is last -->
								 <img src="/bp_image_comparison_slider/static/src/img/photo_after.jpg" class="img-img-responsive" width="100%"/>
							</div>
						</div>
					</section>

				</div>
			</xpath>
		</template>
	</data>
</openerp>